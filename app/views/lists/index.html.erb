<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
    <h1>Save every movie you want</h1>
    <p>classic</p>
</div>

<div class="container">
  <div class="d-flex justify-content-between py-5">
<h3>My Lists</h3>
<%=link_to "Create a movie list", new_list_path, class: "link btn btn-success text-white"%>
</div>
<div class="d-flex gap-5">
<%@lists.each do |list|%>
<%url = list.photo.attached? ? list.photo.key : ''%>
  <div class="card-category"  style="background-image: url('<%=cl_image_path url, height:300, width: 400, crop: :fill%>')">
<%=link_to list.name, list_path(list), class: "text-white link-offset-2 link-underline link-underline-opacity-0"%>
</div>
<%end%>

</div>
</div>
