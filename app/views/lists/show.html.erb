<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <h1><%=@list.name%></h1>
</div>

<div class="container">
  <div class="d-flex justify-content-end py-3">
<%=link_to "add a new bookmark", new_bookmark_path(@list), class: "link btn btn-success text-white"%>
  </div>


<%@bookmarks.each do |bookmark|%>
      <%@movie_id = bookmark.movie_id%>
      <%@movie = Movie.find(@movie_id)%>
<div class="card-trip">
  <img src=<%=@movie.poster_url%>/>
  <div class="card-trip-infos">
    <div>
      <h2><%=@movie.title%> * <%=@movie.rating%> <i class="fa-solid fa-star"></i></h2>
      <p><%=@movie.overview%></p>
    </div>
    <h2 class="card-trip-pricing"><%=link_to "delete", bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "are you sure?"}%></h2>
  </div>
</div>
<%end%>
</div>
